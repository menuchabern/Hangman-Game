<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HangmanMAUI.HangmanGame"
             Title="Hangman Game">
    <Grid ColumnDefinitions="3*,2*">
        <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
            <Grid ColumnDefinitions="*,1.3*,*,*,*" Margin="10" ColumnSpacing="20" HorizontalOptions="Center">
                <Button Text="Start" x:Name="btnStart" Grid.Column="0" Clicked="btnStart_Clicked"/>
                <Label Text="How Many Letters:" VerticalOptions="Center" HorizontalTextAlignment="End"  Grid.Column="1"/>
                <Entry x:Name="txtHowManyLetters" MaximumHeightRequest="70" MinimumWidthRequest="100" Margin="10,10" Grid.Column="2"/>
                <Label x:Name="lblTriesLeft" VerticalOptions="Center" Grid.Column="3" Text="{Binding NumOfTriesDescription}"/>
            </Grid>
            <Label TextColor="Red" MinimumHeightRequest="80" Text="{Binding GameMessage}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="30"/>
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*" RowDefinitions="90" Margin="30">
                <Grid.Resources>
                    <Style TargetType="Entry">
                        <Setter Property="BackgroundColor" Value="White"/>
                        <Setter Property="FontSize" Value="60"/>
                        <Setter Property="Margin" Value="3"/>
                        <Setter Property="IsReadOnly" Value="True"/>
                    </Style>
                </Grid.Resources>
                <Entry Grid.Column="0" Grid.Row="0" x:Name="txt1" BindingContext="{Binding Path=LetterBoxes[0]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="1" Grid.Row="0" x:Name="txt2" BindingContext="{Binding Path=LetterBoxes[1]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="2" Grid.Row="0" x:Name="txt3" BindingContext="{Binding Path=LetterBoxes[2]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="3" Grid.Row="0" x:Name="txt4" BindingContext="{Binding Path=LetterBoxes[3]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="4" Grid.Row="0" x:Name="txt5" BindingContext="{Binding Path=LetterBoxes[4]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="5" Grid.Row="0" x:Name="txt6" BindingContext="{Binding Path=LetterBoxes[5]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="6" Grid.Row="0" x:Name="txt7" BindingContext="{Binding Path=LetterBoxes[6]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="7" Grid.Row="0" x:Name="txt8" BindingContext="{Binding Path=LetterBoxes[7]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
                <Entry Grid.Column="8" Grid.Row="0" x:Name="txt9" BindingContext="{Binding Path=LetterBoxes[8]}" Text="{Binding Text}" BackgroundColor="{Binding MauiBackColor}"/>
            </Grid>
            <Grid ColumnDefinitions="*,*,*,*,*,*,*,*,*" RowDefinitions="*,*,*" VerticalOptions="End" ColumnSpacing="5" RowSpacing="5" Margin="10">
                <Grid.Resources>
                    <Style TargetType="Button">
                        <Setter Property="BackgroundColor" Value="LightGrey"/>
                        <Setter Property="MinimumHeightRequest" Value="70"/>
                    </Style>
                </Grid.Resources>
                <Button Text="A" x:Name="btnA" Grid.Column="0" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="B" x:Name="btnB" Grid.Column="1" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="C" x:Name="btnC" Grid.Column="2" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="D" x:Name="btnD" Grid.Column="3" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="E" x:Name="btnE" Grid.Column="4" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="F" x:Name="btnF" Grid.Column="5" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="G" x:Name="btnG" Grid.Column="6" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="H" x:Name="btnH" Grid.Column="7" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="I" x:Name="btnI" Grid.Column="8" Grid.Row="0" Clicked="btn_Clicked"/>
                <Button Text="J" x:Name="btnJ" Grid.Column="0" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="K" x:Name="btnK" Grid.Column="1" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="L" x:Name="btnL" Grid.Column="2" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="M" x:Name="btnM" Grid.Column="3" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="N" x:Name="btnN" Grid.Column="4" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="O" x:Name="btnO" Grid.Column="5" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="P" x:Name="btnP" Grid.Column="6" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="Q" x:Name="btnQ" Grid.Column="7" Grid.Row="1" Clicked="btn_Clicked"/>
                <Button Text="R" x:Name="btnR" Grid.Column="8" Grid.Row="1" Clicked="btn_Clicked"/>
                <Grid ColumnDefinitions="*,*,*,*,*,*,*,*" RowDefinitions="*" Grid.Row="2" Grid.ColumnSpan="9" ColumnSpacing="5" RowSpacing="5">
                    <Button Text="S" x:Name="btnS" Grid.Column="0" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="T" x:Name="btnT" Grid.Column="1" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="U" x:Name="btnU" Grid.Column="2" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="V" x:Name="btnV" Grid.Column="3" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="W" x:Name="btnW" Grid.Column="4" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="X" x:Name="btnX" Grid.Column="5" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="Y" x:Name="btnY" Grid.Column="6" Grid.Row="0" Clicked="btn_Clicked"/>
                    <Button Text="Z" x:Name="btnZ" Grid.Column="7" Grid.Row="0" Clicked="btn_Clicked"/>

                </Grid>
            </Grid>
        </VerticalStackLayout>
        <Image Source="{Binding PicNumMaui, StringFormat='p{0}p.png'}" Grid.Column="1"/>
    </Grid>
</ContentPage>